OWNER=uucp
GROUP=daemon
SPOOL=/usr/spool/uucp
LIB=/usr/lib/uucp

name=`cat /etc/hostname`
hostname $name
cd $LIB
chown $OWNER.$GROUP L.sys; chmod 400 L-devices
cd $SPOOL
for i in D."$name"X D.$name
do mkdir $i; chown $OWNER.$GROUP $i; chmod 755 $i
done
kill -1 1
chown $OWNER /dev/tty0*
echo 'setenv TERM vt100' >> /.cshrc
rm /etc/passwd.*
/etc/mkpasswd /etc/passwd
echo 'Now logout and login again'
